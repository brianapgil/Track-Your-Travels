<section class="section">
  <div class="container">
    <h2 class="title">Login</h2>
    <form action="/login" method="POST">
      <div class="field">
        <label class="label" for="email-login">Email:</label>
        <div class="control">
          <input class="input" type="email" id="email-login" name="email" required>
        </div>
      </div>
      <div class="field">
        <label class="label" for="password-login">Password:</label>
        <div class="control">
          <input class="input" type="password" id="password-login" name="password" required>
        </div>
      </div>
      <div class="control">
        <button class="button is-primary" type="submit">Login</button>
      </div>
    </form>
    <p class="mt-3"><a href="/signup">Create an account</a></p>
  </div>
</section>
